@{
    ViewBag.Title = "Student List";
}

@model IEnumerable<WebApplication3.Models.StudentDetails>

@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @id = "searchForm" }))
{
    <input type="text" name="searchString" placeholder="Search by name" value="@Request.QueryString["searchString"]" />
    <input type="submit" value="Search" />
    <a href="@Url.Action("Index", "Home")">Clear</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Class</th>
            <th>Subject</th>
            <th>Roll</th>
            <th>Age</th>
            <th>Image</th>
            <th>Teacher Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.StudentClass</td>
                <td>@item.StudentSubject</td>
                <td>@item.StudentRoll</td>
                <td>@item.StudentAge</td>
                <td>
                    @if (item.StudentImage != null)
                    {
                        <img src="@item.StudentImage" alt="Student Image" style="width: 100px; height: auto;" />
                    }
                </td>
                <td>@item.TeacherName</td>
            </tr>
        }
    </tbody>
</table>
